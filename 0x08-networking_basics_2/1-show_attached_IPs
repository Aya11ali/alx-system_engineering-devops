#!/usr/bin/env bash
# ping 5 times

# Get the list of network interfacess
interfaces=$(ifconfig -a | grep 'inet ' | awk '{print $2}')

# Loop through each interface and extracct the IPv4 addresses
for ip in $interfaces; do
  # Check if the IP is in the format of IPv4 address
  if [[ $ip =~ ^[0-9]+\.[0-9]+\.[0-9]+\.[0-9]+$ ]]; then
    echo "$ip"
  fi
done
